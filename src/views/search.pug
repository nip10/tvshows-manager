extends layout/base

block content
    #page-content-wrapper
        .main-container
          .row
            .col-md-11.pt-3.mx-auto
              if tvshows
                h2= `Found ${tvshows.length} tvshows`
                each tvshow in tvshows
                  .card__search
                    .card-body
                      div.poster-container
                        a(href=`/tsm/tvshows/${tvshow.id}`)
                          - if (tvshow.banner) {
                            img(src=`https://artworks.thetvdb.com/banners/${tvshow.banner}`, alt=`${tvshow.seriesName} banner`)
                          - } else {
                            img(src=`http://via.placeholder.com/218x40`, alt=`${tvshow.seriesName} banner`)
                          - }
                      a(href=`/tsm/tvshows/${tvshow.id}`).tvshow= tvshow.seriesName
                      p= tvshow.status
              else
                p No tvshows found.