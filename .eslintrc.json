{
    "extends": "airbnb-base",
    "rules": {
        "linebreak-style": ["error", "windows"],
        "indent": ["error", 4]
    },
    "overrides": [{
        "files": ["src/public/js/**/*.js"],
        "parserOptions": {
            "sourceType": "script"
        },
        "env": {
            "browser": true,
            "jquery": true
        },
        "globals": {
            "toastr": true,
            "Bloodhound": true,
            "Cookies": true,
            "validator": true,
            "grecaptcha": true
        }
    }]
}