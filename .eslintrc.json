{
    "extends": ["airbnb-base", "plugin:jest/recommended"],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "indent": ["error", 4]
    },
    "plugins": ["jest"],
    "overrides": [{
        "files": ["src/js/app.js"],
        "parserOptions": {
            "sourceType": "script"
        },
        "env": {
            "browser": true,
            "jquery": true
        },
        "globals": {
            "toastr": true,
            "Bloodhound": true,
            "Cookies": true,
            "validator": true,
            "grecaptcha": true
        }
    }, 
    {
        "files": ["*.test.js"],
        "env": {
            "jest/globals": true
        }
  }]
}