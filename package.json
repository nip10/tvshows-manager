{
  "name": "tvshows-manager",
  "version": "1.0.0",
  "description": "Tvshow Manager",
  "main": "./dist/server.js",
  "scripts": {
    "build": "npm run build:client&&npm run build:server",
    "build:server": "babel src -d dist --ignore src/public,src/views,src/db/knexfile.sample.js",
    "build:client": "gulp --production",
    "lint": "eslint .",
    "start": "set NODE_ENV=production&&node ./dist/server.js",
    "watch:assets": "set NODE_ENV=development&&gulp serve",
    "watch:server": "set NODE_ENV=development&&nodemon ./src/server.js --exec babel-node",
    "watch:debug": "set NODE_ENV=development&&nodemon ./src/server.js --exec babel-node --inspect",
    "migrate": "knex migrate:rollback --knexfile ./src/db/knexfile.js --env development && knex migrate:latest --knexfile ./src/db/knexfile.js --env development",
    "migrate:prod": "knex migrate:rollback --knexfile ./dist/db/knexfile.js --env production && knex migrate:latest --knexfile ./dist/db/knexfile.js --env production",
    "seed": "knex seed:run --knexfile ./src/db/knexfile.js --env development",
    "seed:prod": "knex seed:run --knexfile ./dist/db/knexfile.js --env production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nip10/tvshows-manager.git"
  },
  "author": "Diogo Cardoso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nip10/tvshows-manager/issues"
  },
  "homepage": "https://github.com/nip10/tvshows-manager#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "connect-redis": "^3.3.3",
    "cookie-parser": "^1.4.3",
    "cron": "^1.3.0",
    "dotenv": "^5.0.0",
    "email-templates": "^3.3.4",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "helmet": "^3.11.0",
    "knex": "^0.14.3",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.1",
    "pug": "^2.0.0-rc.4",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "serve-favicon": "^2.4.5",
    "uuid": "^3.2.1",
    "validator": "^9.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browser-sync": "^2.23.6",
    "browserify": "^16.1.0",
    "del": "^3.0.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-clean-css": "^3.9.2",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^4.0.2",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.0",
    "gulp-postcss": "^7.0.1",
    "gulp-sass": "^3.1.0",
    "gulp-sass-lint": "^1.3.4",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^5.0.0",
    "lazypipe": "^1.0.1",
    "nodemon": "^1.14.12",
    "postcss-bem": "^0.4.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^11.1.0",
    "prettier": "1.10.2",
    "run-sequence": "^2.2.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watchify": "^3.10.0"
  }
}