{
    "vhost": "http://localhost:3001",
    "sourceRoot": "./src/public/",
    "destinationRoot": "./dist/",
    "tasks": {
        "sass": {
            "source": ["sass/**/*.scss"],
            "destination": "css",
            "browsers": ["last 2 versions"],
            "config": {
                "includePaths": []
            }
        },
        "sasslint": {
            "source": ["sass/**/*.scss"],
            "ignore": ["sass/vendor/**/*.scss"],
            "configFile": ".sass-lint.yml"
        },
        "scripts": {
            "source": ["js/app.js"],
            "destination": "js",
            "destinationFile": "app.js",
            "babelPresets": "airbnb"
        },
        "eslint": {
            "source": ["js/*.js"],
            "config": {
                "configFile": ".eslintrc.json"
            }
        },
        "images": {
            "source": ["img/**/*"],
            "destination": "img",
            "minify": true
        },
        "views": {
            "source": ["server/views/**/*.pug"]
        }
    }
}